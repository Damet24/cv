---
import TimeLineItemButton from "./TimeLineItemButton.astro";

export interface Props {
    title: string;
    time?: string;
    description: string;
    link?: {
        url: string;
        text: string;
    };
}

const { time, title, description, link } = Astro.props;
---

<li class="mb-4 ml-4">
    <div
        class="absolute w-3 h-3 bg-gray-400 rounded-full mt-1.5 -left-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
    >
    </div>
    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{title}</h3>
    <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">
        {description}
    </p>

    {
        time ? (
            <time class="mb-1 text-sm font-normal leading-none text-gray-400 dark:text-gray-500">
                {time}
            </time>
        ) : null
    }
    {link ? <TimeLineItemButton url={link.url} text={link.text} /> : null}
</li>
