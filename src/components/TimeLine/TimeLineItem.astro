---
import TimeLineItemButton from "./TimeLineItemButton.astro";

export interface Props {
  title: string;
  time?: string;
  description: string;
  link?: {
    url: string;
    text: string;
  };
}

const { time, title, description, link } = Astro.props;
---

<li class="mb-1 ml-4">
  <div
    class="absolute w-3 h-3 bg-gray-400 rounded-full mt-1.5 -left-1.5 border border-white"
  >
  </div>
  <h3 class="text-lg font-semibold text-gray-900">{title}</h3>
  <p class="mb-1 text-base font-normal text-gray-500">
    {description}
  </p>

  {
    time ? (
      <time class="mb-1 text-sm font-normal leading-none text-gray-400 ">
        {time}
      </time>
    ) : null
  }
  {link ? <TimeLineItemButton url={link.url} text={link.text} /> : null}
</li>
