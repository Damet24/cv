---
export interface Props {
    url: string;
    text: string;
}

const { url, text } = Astro.props;
---

<a
    href={url}
    class="inline-flex items-center py-2 px-4 text-sm font-medium text-gray-900 rounded-lg border border-gray-200 hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-200 focus:text-blue-700 "
>
    {text}
</a>
